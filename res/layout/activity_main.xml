<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/mn.aurora.seller"
    android:id="@+id/LinearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/back"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:background="@drawable/header_back" >

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
           	android:background="@drawable/header_info" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/header_back_btn" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/undsen_tsonh"
            android:textColor="#fff"
            android:textSize="15sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingTop="50dp"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp" >

            <Button
                android:id="@+id/button3"
                android:layout_width="104dp"
                android:layout_height="91dp"
                android:background="@drawable/pic_1" />

            <Button
                android:id="@+id/button4"
                android:layout_width="104dp"
                android:layout_height="fill_parent"
                android:background="@drawable/pic_2" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp" >

            <Button
                android:id="@+id/button5"
                android:layout_width="95dp"
                android:layout_height="85dp"
                android:layout_weight="0.22"
                android:background="@drawable/pic_3" />

            <Button
                android:id="@+id/button6"
                android:layout_width="98dp"
                android:layout_height="87dp"
                android:layout_weight="0.12"
                android:background="@drawable/pic_4" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/button7"
                android:layout_width="102dp"
                android:layout_height="80dp"
                android:layout_weight="0.00"
                android:background="@drawable/pic_5" />

            <Button
                android:id="@+id/button8"
                android:layout_width="94dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.01"
                android:background="@drawable/pic_6" />

        </LinearLayout>

    </LinearLayout>

    <GridView
        android:id="@+id/gridView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:horizontalSpacing="10dp"
        android:numColumns="2"
        android:verticalSpacing="10dp"
        android:visibility="visible" >

    </GridView>

</LinearLayout>